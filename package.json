{
  "name": "trip-organizer",
  "version": "0.1.0",
  "description": "Multi-user collaborative trip organizer with real-time sync",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "deploy": "firebase deploy",
    "deploy:firestore": "firebase deploy --only firestore",
    "deploy:rules": "firebase deploy --only firestore:rules",
    "deploy:indexes": "firebase deploy --only firestore:indexes",
    "test:browser": "playwright test",
    "test:debug": "node scripts/debug-browser.js",
    "test:interactive": "node scripts/interactive-test.js",
    "test:quick": "node scripts/quick-test.js",
    "test:e2e": "node scripts/e2e-test.js",
    "test:bdd": "node scripts/e2e-bdd-test.js",
    "test:crud": "node scripts/e2e-crud-test.js",
    "test:data": "node scripts/data-driven-test-runner.js",
    "test:manual": "node scripts/manual-interaction-test.js",
    "test:harness": "node scripts/tests/crud.test.js",
    "verify:db": "npx tsx scripts/verify-database.ts",
    "seed": "npx tsx scripts/quick-seed.ts",
    "clean:data": "npx tsx scripts/clean-test-data.ts"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "firebase": "^11.1.0",
    "nanoid": "^5.0.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "^20.11.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "firebase-tools": "^13.0.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.3.3",
    "vite": "^5.0.11"
  }
}
