{
  "name": "trip-organizer",
  "version": "0.1.0",
  "description": "Multi-user collaborative trip organizer with real-time sync",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
